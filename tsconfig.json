{
  "extends": [
    "@virtual-live-lab/tsconfig/vite",
    "@virtual-live-lab/tsconfig/react",
    "@virtual-live-lab/tsconfig/cloudflare-workers"
  ],
  "compilerOptions": {
    "types": ["vite/client", "@cloudflare/workers-types"],
    "baseUrl": ".",
    "rootDirs": [".", "./.react-router/types"]
  },
  "include": [
    ".react-router/types/**/*",
    "app/**/*",
    "app/**/.server/**/*",
    "app/**/.client/**/*",
    "workers/**/*",
    "worker-configuration.d.ts"
  ]
}
